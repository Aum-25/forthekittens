@model Category
<form method="post">
    <input asp-for="Id" hidden disabled/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" type="text" class="form-control m-2" disabled/>

    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder"  class="form-control m-2" disabled/>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-secondary my-2 my-sm-0 form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary my-2 my-sm-0 form-control">Back</a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}