@model Product
<form method="post">
    <input disabled asp-for="Id" hidden disabled />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Product</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Product_name">Product Name</label>
        <input disabled asp-for="Product_name" type="text" class="form-control m-2" />
        <span asp-validation-for="Product_name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Product_description">Product Description</label>
        <input disabled asp-for="Product_description" class="form-control m-2" />
        <span asp-validation-for="Product_description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Upc">UPC [ Barcode ]</label>
        <input disabled asp-for="Upc" class="form-control m-2" />
        <span asp-validation-for="Upc" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Manufacturer">Manufacuter </label>
        <input disabled asp-for="Manufacturer" class="form-control m-2" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ListPrice">List Price</label>
        <input disabled asp-for="ListPrice" class="form-control m-2" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price">Price for 1-5</label>
        <input disabled asp-for="Price" class="form-control m-2" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price5">Price for 5+ </label>
        <input disabled asp-for="Price5" class="form-control m-2" />
        <span asp-validation-for="Price5" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price10">Price for 10+</label>
        <input disabled asp-for="Price10" class="form-control m-2" />
        <span asp-validation-for="Price10" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-secondary my-2 my-sm-0 form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary my-2 my-sm-0 form-control">Back</a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}