@model ProductVM
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Product.Id!=0?"Update":"Create") Products</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <div asp-validation-summary="All"></div>
            <input asp-for="Product.Id" hidden />
            <div class="mb-3 row p-1">
                <label asp-for="Product.Product_name">Product Name</label>
                <input asp-for="Product.Product_name" type="text" class="form-control m-2" />
                <span asp-validation-for="Product.Product_name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Product_description">Product Description</label>
                <input asp-for="Product.Product_description" class="form-control m-2" />
                <span asp-validation-for="Product.Product_description" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Upc">UPC [ Barcode ]</label>
                <input asp-for="Product.Upc" class="form-control m-2" />
                <span asp-validation-for="Product.Upc" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Manufacturer">Manufacuter </label>
                <input asp-for="Product.Manufacturer" class="form-control m-2" />
                <span asp-validation-for="Product.Manufacturer" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.ListPrice">List Price</label>
                <input asp-for="Product.ListPrice" class="form-control m-2" />
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Price">Price for 1-5</label>
                <input asp-for="Product.Price" class="form-control m-2" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Price5">Price for 5+ </label>
                <input asp-for="Product.Price5" class="form-control m-2" />
                <span asp-validation-for="Product.Price5" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.Price10">Price for 10+</label>
                <input asp-for="Product.Price10" class="form-control m-2" />
                <span asp-validation-for="Product.Price10" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select m-2">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Product.ImageUrl">ImageUrl</label>
                <input type="file" name="file" class="form-control m-2" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-secondary my-2 my-sm-0 form-control">@(Model.Product.Id != 0 ? "Update" : "Create")</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary my-2 my-sm-0 form-control">Back</a>
                </div>
            </div>
        </div>
        <div class="col-5">
            <input asp-for="Product.ImageUrl" hidden/>
            <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid pink"/>
        </div>
    </div>
    

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}